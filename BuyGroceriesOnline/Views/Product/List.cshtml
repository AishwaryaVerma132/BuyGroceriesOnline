<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var product in Model.Products)
{
    <div class="col">
    <div class="card" style="width: 18rem;">
        <div class="thumbnail">
            <img src="@product.ImageThumbnailUrl" alt="" class="card-img-top embed-responsive-item">
            <div class="caption">
                <h3 class="pull-right">@product.Price.ToString("c")</h3>
                <h3 class="card-title">
                   <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" >@product.Name</a>

                </h3>
                <p class="card-text">@product.ShortDescription</p>
            </div>
            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-danger" 
                       asp-controller="ShoppingCart" 
                       asp-action="AddToShoppingCart"
                       asp-route-pieId="@product.ProductId">Add to cart</a>
                </p>
        </div>
        </div>
    </div>
    </div>
    <br />
}
</div>