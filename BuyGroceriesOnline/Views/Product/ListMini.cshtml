@model IEnumerable<BuyGroceriesOnline.Models.ProductMini>

@{
    ViewData["Title"] = "ListMini";
}

<h1>ListMini</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageThumbnailUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
               @* @Html.DisplayFor(modelItem => item.ImageThumbnailUrl)*@
               <img src="@item.ImageThumbnailUrl" class="rounded" width=30%>
            </td>
            <td>
                <div class="addToCart">
                <p class="button">
                    <a class="btn btn-danger" 
                       asp-controller="ShoppingCart" 
                       asp-action="AddToShoppingCart"
                       asp-route-productId="@item.ProductId">Add to cart</a>
                </p>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
