@model IEnumerable<BuyGroceriesOnline.Models.Product>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="10%" align="center">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td width="30%" align="center">
                <img src="@item.ImageThumbnailUrl" class="rounded" width=30%>
            </td>
            <td width="20%" align="center">
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                <div class="addToCart">
                <p class="button">
                    <a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@item.ProductId">
                        Add To Cart
                    </a>
                    </p>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<p class="button">
    <a class="btn buttonn btn-danger" asp-controller="Product" asp-action="List" asp-route-id="0">Back to List</a>
</p>
