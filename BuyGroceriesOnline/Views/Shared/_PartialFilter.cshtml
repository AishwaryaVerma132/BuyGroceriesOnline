@model IEnumerable<BuyGroceriesOnline.Models.Product>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.ImageThumbnailUrl" class="rounded" width=10%>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                <div class="addToCart">
                <p class="button">
                    <a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@item.ProductId">
                        Add To Cart
                    </a>
                    </p>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<p class="button">
    <a class="btn buttonn btn-danger" asp-controller="Product" asp-action="List" asp-route-id="0">Back to List</a>
</p>
