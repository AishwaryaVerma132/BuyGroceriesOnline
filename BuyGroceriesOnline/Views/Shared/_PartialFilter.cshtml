@model IEnumerable<BuyGroceriesOnline.Models.Product>

<br>
<br>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            
             @if(Context.Session.GetString("manager")=="0")
             {
                 <th>
                      <p>Purchase</p>
                 </th>
             }
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="10%" align="center">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td width="30%" align="center">
                <img src="@item.ImageThumbnailUrl" class="rounded" width=30%>
            </td>
            <td width="20%" align="center">
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            
             @if(Context.Session.GetString("manager")=="0")
             {
                 <td>
                    <div class="addToCart">
                       <p class="button">
                           <a class="btn btn-danger" 
                              asp-controller="ShoppingCart" 
                              asp-action="AddToShoppingCart"
                              asp-route-productId="@item.ProductId">Add to cart</a>
                       </p>
                    </div>
                   </td>
             }
           
        </tr>
}
    </tbody>
</table>

<p class="button">
    <a class="btn buttonn btn-danger" asp-controller="Product" asp-action="List" asp-route-id="0">Back to List</a>
</p>
