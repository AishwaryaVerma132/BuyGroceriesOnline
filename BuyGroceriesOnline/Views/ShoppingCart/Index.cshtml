@using BuyGroceriesOnline.ViewModels
@model ShoppingCartViewModel

<h2>Your shopping cart</h2>
<h4>Here are your Groceries in your shopping cart.</h4>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Selected amount</th>
        <th>Product</th>
        <th class="text-right">Price</th>
        <th class="text-right">Subtotal</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
    {
        <tr>
            @*<td class="text-center">@line.Amount</td>*@
            <td align="center">
            <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-productId="@line.Product.ProductId">
             <img src="~/images/minusIcon.png" width="25" height="25" /></a>  @line.Amount  
             <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@line.Product.ProductId">
             <img src="~/images/addingIcon.png" width="25" height="25" /></a>
             </td>
            <td class="text-left">@line.Product.Name</td>
            <td class="text-right">Rs. @line.Product.Price.ToString()</td>
            <td class="text-right"> Rs.
                @((line.Amount * line.Product.Price).ToString())
            </td>
            <td>
                <a  asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-productId="@line.Product.ProductId">Remove Item</a>
            </td>
            
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" class="text-right">Total:</td>
        <td class="text-right"> Rs.
            @Model.ShoppingCartTotal.ToString()
        </td>
        
    </tr>
    </tfoot>
</table>

<div align="center">
   <p class="button">
       <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Buy Now</a>
   </p>
</div>
 
 <div class="addToCart">
   <p class="button">
      <a class="btn btn-primary" 
         asp-controller="ShoppingCart" 
         asp-action="ClearCart"
         asp-route-pieId="@Model.ShoppingCart">Clear Cart</a>
   </p>

   <p class="button">
      <a class="btn btn-primary" 
         asp-controller="Product" 
         asp-action="List">Back to All Products</a>
   </p>
 </div>
        

