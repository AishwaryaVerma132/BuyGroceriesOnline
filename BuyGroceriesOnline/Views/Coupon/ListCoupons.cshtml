@model IEnumerable<BuyGroceriesOnline.Models.Coupon>

@{
    ViewData["Title"] = "ListCoupons";
}
<br/>
<h2>Coupon List</h2>
<hr />

<p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-folder-plus"></i> &nbsp;Create New
        </a>
</p>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CouponName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CouponName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CouponId">Edit</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CouponId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
